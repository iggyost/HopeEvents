        <Style TargetType="RadioButton" x:Key="HolidaysRdbtn">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontFamily" Value="Golos" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border>
                            <Grid x:Name="rdbtnBackground"
                                  Background="#FF4986FF">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="24"></ColumnDefinition>
                                    <ColumnDefinition Width="48"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Image Source="/Resources/Images/confetti.png"
                                       Grid.Column="1"
                                       Width="48"
                                       Height="48"></Image>
                                <ContentPresenter Grid.Column="2"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"
                                                  Margin="16 0 0 0"></ContentPresenter>
                                <Border Grid.Column="2"
                                        x:Name="selectionBorder"
                                        BorderBrush="SkyBlue"
                                        BorderThickness="0"
                                        CornerRadius="2"
                                        HorizontalAlignment="Right"></Border>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="Checked">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimation Storyboard.TargetProperty="BorderThickness"
                                                            Storyboard.TargetName="selectionBorder"
                                                            To="3"
                                                            Duration="0:0:0.10"></ThicknessAnimation>
                                        <ColorAnimation Storyboard.TargetName="rdbtnBackground"
                                                        Storyboard.TargetProperty="(Grid.Background).(SolidColorBrush.Color)"
                                                        From="#FF4986FF"
                                                        To="#7F5BC7FF"
                                                        Duration="0:0:0.10"></ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="Unchecked">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimation Storyboard.TargetProperty="BorderThickness"
                                                            Storyboard.TargetName="selectionBorder"
                                                            To="0"
                                                            Duration="0:0:0.10"></ThicknessAnimation>
                                        <ColorAnimation Storyboard.TargetName="rdbtnBackground"
                                                        Storyboard.TargetProperty="(Grid.Background).(SolidColorBrush.Color)"
                                                        From="#7F5BC7FF"
                                                        To="#FF4986FF"
                                                        Duration="0:0:0.10"></ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
